<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Card Builder</title>
  </head>
  <body>
    <form action="/cards" method="post">
      <input type="number" name="mana" placeholder="Mana">
      <input type="number" name="attack" placeholder="Attack">
      <input type="number" name="health" placeholder="Health">
      <input type="text" name="description" placeholder="Description">
      <input type="submit" name="" value="Create">
    </form>
    <h2>Your current list:</h2>
    <% for(let i = 0; i < cardlist.length; i++) { %>
      <div class="">
        <hr>
        <h3>Card <%= i + 1 %></h3>
        <p>Mana: <%= cardlist[i].mana %></p>
        <p>Attack: <%= cardlist[i].attack %></p>
        <p>Health: <%= cardlist[i].health %></p>
        <p>Description: <%= cardlist[i].description %></p>
        <a href="/cardlist/<%=cardlist[i].id%>">Remove from list</a>
      </div>
    <% } %>
    <hr>
    <h1>All Cards</h1>
    <% for(let i = 0; i < cards.length; i++) { %>
      <hr>
      <div class="">
        <p>Mana: <%= cards[i].mana %></p>
        <p>Attack: <%= cards[i].attack %></p>
        <p>Health: <%= cards[i].health %></p>
        <p>Description: <%= cards[i].description %></p>
        <a href="/cards/<%=cards[i].id%>">Add to list</a>
      </div>
    <% } %>
  </body>
</html>
